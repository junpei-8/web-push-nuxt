{
  "name": "web-push-nuxt",
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "build:nuxt": "nuxt build",
    "build:sw": "run-s build:sw:*",
    "build:sw:clean": "rm -rf ./public/_sw",
    "build:sw:tsc": "tsc --project ./service-workers/tsconfig.json --outDir ./public/_sw",
    "build:sw:terser": "echo ./public/_sw/{*.js,**/*.js} | xargs -n1 sh -c 'terser --output ./public/_sw/${1#./public/_sw} --compress --mangle -- $1' argv0",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "migration:run": "node --loader esbuild-register/loader -r esbuild-register ./database/migrate.ts",
    "migration:generate": "drizzle-kit generate:mysql --config ./database/config.ts",
    "migration:drop": "drizzle-kit drop --config ./database/config.ts"
  },
  "dependencies": {
    "@fontsource-variable/noto-sans-jp": "^5.0.11",
    "@nuxt/devtools": "^0.8.3",
    "@planetscale/database": "^1.11.0",
    "@types/web-push": "^3.6.0",
    "@vite-pwa/nuxt": "^0.1.1",
    "drizzle-orm": "^0.28.6",
    "npm-run-all": "^4.1.5",
    "nuxt": "^3.7.3",
    "sass": "^1.67.0",
    "terser": "^5.19.4",
    "vite-plugin-vuetify": "^1.0.2",
    "vuetify": "^3.3.17",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "drizzle-kit": "^0.19.13",
    "esbuild-register": "^3.5.0",
    "typescript": "^5.2.2"
  }
}
